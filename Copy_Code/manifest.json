{
  "manifest_version": 3,
  "name": "Code Snippet Manager",
  "version": "1.0",
  "description": "Manage and organize your code snippets efficiently.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "permissions": [
    "storage"
  ],
  "web_accessible_resources": [
    {
      "resources": ["codemirror/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
